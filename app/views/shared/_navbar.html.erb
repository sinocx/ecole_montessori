<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

      <!-- Links when logged in -->
      <%= link_to "L'école", school_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Informations", information_path, class: "navbar-wagon-item navbar-wagon-link"  %>
      <%= link_to "La pédagogie", pedagogie_path, class: "navbar-wagon-item navbar-wagon-link"  %>
      <%= link_to "Les programmes", programme_path, class: "navbar-wagon-item navbar-wagon-link"  %>
      <%= link_to "Contact", contact_path, class: "navbar-wagon-item navbar-wagon-link"  %>
